<link href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css" rel="stylesheet" media="screen">
<div class="container">
  <div class="row">
  </div>
  <div class="row user-menu-container square">
    <div class="col-md-12 user-details">
      <div class="row coralbg white infos">
        <div class="col-md-6 no-pad">
          <div class="user-pad">
            <h3>Welcome back, <%= @user.name %></h3>
            <h4 class="white"><i class="fa fa-check-circle-o"></i> Hedspi, HANOI UNIVERSITY </h4>
            <h4 class="white"><i class="fa fa-twitter"></i> iamadeveloper</h4>
            <% if !current_user?(@user) %>
              <% if current_user.following?(@user) %>
                <%= render "unfollow" %>
              <% else %>
                <%= render "follow" %>
              <%end%>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 no-pad user-image">
          <div class="user-image-box">
            <%= image_tag(@user.avatar.url || "default-user.jpg", class: "img-responsive ")%>
            <% if @user == current_user %>
              <%= form_for(@user, as: @user, url: registration_path(@user), html: { method: :put, id: "form-edit-avatar" }) do |f| %>
              <div class="user-avatar-change">
                <i class="fa fa-camera" aria-hidden="true"><%= f.file_field :avatar, class: "upload" %></i>
                <p>Change your avatar</p>
              </div>
              <div class="other-info" style="visibility: hidden">
              </div>
              <% end%>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row overview">
        <div class="col-md-4 user-pad text-center">
          <h3>FOLLOWERS</h3>
          <h4><%= @user.followers.count%></h4>
        </div>
        <div class="col-md-4 user-pad text-center">
          <h3>FOLLOWING</h3>
          <h4><%= @user.following.count%></h4>
        </div>
        <div class="col-md-4 user-pad text-center">
          <h3>REVIEWS</h3>
          <h4><%= @user.reviews.count%></h4>
        </div>
      </div>
    </div>

  </div>
  <div class="row ">
    <div class="col-md-12 user-menu-btns">
      <div class="btn-group-vertical square" id="responsive">
        <% if (@user == current_user)%>
        <a href="#" class="btn btn-block active">
          <i class="fa fa-user fa-3x"></i>
          <div class="overlay">
            <div class="text">My Profile</div>
          </div>
        </a>
        <a href="#" class="btn btn-default">
          <i class="fa fa-bell-o fa-3x"></i>
          <div class="overlay">
            <div class="text">Notifications</div>
          </div>
        </a>
        <% end %>
        <a href="#" class="btn btn-default <%= "active" if @user != current_user%>">
          <i class="fa fa-pencil-square-o fa-3x" aria-hidden="true"></i>
          <div class="overlay">
            <div class="text">List Reviews</div>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 user-menu user-pad">
      <% if (@user == current_user)%>
        <div class="user-menu-content active">
        <h2 class="text-center">Edit Profile</h2>
        <%= form_for(@user, as: @user, url: registration_path(@user), html: { class:"edit-profile", method: :put }) do |f| %>
            <% if @user.errors.any? %>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
            <% end %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>

            <div class="field">
              <%= f.text_field :name, autofocus: true, placeholder: "Username" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %>
              <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
            </div>

            <div class="field">
              <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current password" %>
            </div>
            <a class="btn btn-labeled btn-update-profile btn-info" href="">
              <span class="btn-label"><i class="fa fa-floppy-o" aria-hidden="true"></i></span>Save Profile
            </a>
        <% end %>
      </div>
        <div class="user-menu-content ">
            <h3>
              Recent Interactions
            </h3>
