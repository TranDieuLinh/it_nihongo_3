<div class="container">
  <div class="row">
    <% resource.errors.each do |key, value| %>
        <%= content_tag(:p, "#{key} #{value}", :class => "flash alert alert-danger") %>
    <% end %>
  </div>
  <div class="row">
    <div class="wrap">
      <p class="form-title">Forgot your password?</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "reset-password" }) do |f| %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
    <% end %>
    </div>
 </div>
</div>

