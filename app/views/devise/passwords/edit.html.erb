<div class="container">
  <div class="row">
    <% resource.errors.each do |key, value| %>
        <%= content_tag(:p, "#{key} #{value}", :class => "flash alert alert-danger") %>
    <% end %>
  </div>
  <div class="row">
    <div class="wrap">
      <p class="form-title">Change your password</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "edit-password" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.password_field :password, autofocus: true, placeholder: "New Password", autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder: "Confirm new password",autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: "btn btn-primary" %>
          </div>
          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
