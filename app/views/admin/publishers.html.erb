    <h1>Publishers</h1>
    <div class="row col-md-12 custyle">
    <table id="table-genre" class="table table-striped custab table-hover table-bordered table-list">
    <thead>
    <a class="btn btn-primary pull-right genre-add"><b>+</b> Add new Publishers</a>
        <tr>
            <th class="id-area">ID</th>
            <th class="name-area">Name</th>
            <th class="text-center edit-area">Edit</th>
            <th class="text-center delete-area">Delete</th>
        </tr>
    </thead>
    <tbody>
        <% @publishers.each do |publisher| %>
            <tr id="row-<%= publisher.id %>">
                <td><%= publisher.id %></td>
                <td class="genre-name-<%= publisher.id%>"><%= publisher.name%></td>
                <td class="text-center genre-edit" value=<%= publisher.id%>><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a> </td>
                <td class="text-center genre-delete" value=<%= publisher.id%>><a class='btn btn-danger btn-xs'><span class="glyphicon glyphicon-remove"></span> Delete</a> </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
<!--</div>-->

<script>
    $('#table-genre').on('click', '.genre-delete', function() {
    // $(".genre-delete").click(function(event){
        var publisher_id =  $(this).attr('value');
        console.log(publisher_id);
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this data!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    url: "/admin/publisher_delete",
                    method: "POST",
                    dataType: "json",
                    data: {publisher_id: publisher_id},
                    error: function (xhr, status, error) {
                        console.error('AJAX Error: ' + status + error);
                        swal("Can not delete!", {
                            icon: "error",
                        });
                    },
                    success: function (response) {
                        console.log(response);
                        swal("Poof! Your data has been deleted!", {
                            icon: "success",
                    });
                     $("#row-"+publisher_id).remove();
                    }
                });
            }
    });
    });
    
